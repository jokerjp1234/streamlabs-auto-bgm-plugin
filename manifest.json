{
  "name": "Auto BGM Player",
  "version": "1.0.0",
  "description": "画面認識による自動BGM再生プラグイン",
  "author": "Your Name",
  "main": "main.html",
  "icon": "icon.png",
  "permissions": [
    "screen_capture",
    "audio_playback",
    "storage"
  ],
  "settings": [
    {
      "name": "sensitivity",
      "label": "画像認識感度",
      "type": "slider",
      "min": 0.1,
      "max": 1.0,
      "default": 0.8,
      "step": 0.1
    },
    {
      "name": "check_interval",
      "label": "チェック間隔(秒)",
      "type": "number",
      "min": 1,
      "max": 10,
      "default": 2
    },
    {
      "name": "max_scenes",
      "label": "最大登録シーン数",
      "type": "number",
      "min": 5,
      "max": 50,
      "default": 20
    }
  ],
  "streamlabs": {
    "type": "overlay",
    "category": "utility",
    "supports_browser_source": true
  }
}